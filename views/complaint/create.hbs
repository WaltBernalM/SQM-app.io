<div class="wrapper">
  <section class="form-section">
		
    <form action="/complaint/create" method="post" enctype="multipart/form-data">
      {{#if errorMessage}}
				<p class="error-message">{{errorMessage}}</p>
			{{/if}}

			<div class="form-group">
				<label class="form-label" for="userId"> Supplier: </label>
				<select name="userId" class="form-control" id="">
					{{#each allSuppliers}}
						<option value="{{_id}}">{{org}}</option>
					{{/each}}
				</select>
			</div>

      
			<div class="form-group">
				<label class="form-label" for="partNumber">Part Number: </label>
				<input 
					class="form-field" 
					id="partNumber" 
					placeholder="123abc" 
					type="text"
					required="required"
					name="partNumber"
				/>
			</div>

			<div class="form-group">
				<label class="form-label" for="batch">Batch: </label>
				<input 
					class="form-field" 
					id="batch" 
					placeholder="" 
					type="text"
					required="required"
					name="batch"
				/>
			</div>

			<div class="form-group">
				<label class="form-label" for="quantity">Quantity: </label>
				<input 
					class="form-control" 
					id="quantity" 
					placeholder="0"
					type="number"
					required="required"
					name="quantity"
          min="0"
				/>
			</div>

			<div class="form-group">
				<label class="form-label" for="problemDesc">Problem: </label>
				<textarea 
					class="form-field"
					id="problemDesc" 
					placeholder="description"
					type="text"
					required="required"
					name="problemDesc"
          cols="40"
          rows="3"
				></textarea>
			</div>

			<div class="form-group">
				<label for="problemDate" class="form-label">Problem date:</label>
				<input 
					class="form-control"
					id="problemDateForm"
					type="date" 
					required="required"
					name="problemDate"
					max=""
				>
			</div>

			<div class="form-group">
				<label class="form-label" for="problemImg">Problem image: </label>
				<input 
					class="form-control-file" 
					id="problemImg" 
					placeholder="" 
					type="file"
					required="required"
					name="problemImg"
          accept=".gif, .jpg, .jpeg, .png," 
				/>
			</div>

			<div>
				<button class="pet-form-button" type="submit">Submit</button>
			</div>
    </form>
  </section>
</div>


