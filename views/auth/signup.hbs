<div class="wrapper">
	<section class="form-section">
		<form action="/auth/signup" method="POST" class="row g-3 bg-moonstone">
			<div class="my-0 py-0 d-flex text-center flex-row align-items-center justify-content-center">
				<img src="/images/account-icon.png" alt="complaint-icon" height="40px" style="filter: invert(100%);">
				<h4 class="my-0 mx-1 px-1" style="text-shadow: 1px 1px 1px black">Main Account Signup</h4>
			</div>
			
			{{#if errorMessage}}
				<div class="col-12 text-center">
					<p class="error-message"><b>{{errorMessage}}</b></p>
				</div>
			{{/if}}
			
			<div class="col-12">
				<label class="form-label" for="username">Username</label>
				<input 
					class="form-control" 
					id="username" 
					placeholder="..." 
					type="text" 
					required="required"
					name="username"
				/>
			</div>
			
			<div class="col-12">
				<label class="form-label" for="email">Email</label>
				<input 
					class="form-control" 
					id="email"
					placeholder="user@example.com" 
					type="email" 
					required="required"
					name="email"
				/>
			</div>

			<div class="col-md-6">
				<label class="form-label" for="password">Password</label>
				<input
					class="form-control" 
					id="password" 
					placeholder="********" 
					type="password"
					name="password"
				/>
			</div>

			<div class="col-md-6">
				<label class="form-label" for="confirmPassword">Confirm password</label>
				<input
					class="form-control" 
					id="confirmPassword" 
					placeholder="********" 
					type="password"
					name="confirmPassword"
				/>
			</div>

			<div class="col-12">
				<label class="form-label" for="username">Organization</label>
				<input 
					class="form-control"
					id="username" 
					placeholder="Company Ltd." 
					type="text"
					required="required"
					name="org"
				/>
			</div>

			<div>
				<button class="pet-form-button" type="submit">Create Account</button>
			</div>
		</form>
	</section>
</div>