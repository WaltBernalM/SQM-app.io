<div class="wrapper">
	<h2>Main User Sign-up</h2>
	<section class="form-section">
		<form action="/auth/signup" method="POST" class="row g-3">
			{{#if errorMessage}}
				<div class="col-12 text-center">
					<p class="error-message"><b>{{errorMessage}}</b></p>
				</div>
			{{/if}}
			
			<div class="col-12">
				<label class="form-label" for="username">Username</label>
				<input 
					class="form-control" 
					id="username" 
					placeholder="..." 
					type="text" 
					required="required"
					name="username"
				/>
			</div>
			
			<div class="col-12">
				<label class="form-label" for="email">Email</label>
				<input 
					class="form-control" 
					id="email"
					placeholder="user@example.com" 
					type="email" 
					required="required"
					name="email"
				/>
			</div>

			<div class="col-md-6">
				<label class="form-label" for="password">Password</label>
				<input
					class="form-control" 
					id="password" 
					placeholder="********" 
					type="password"
					name="password"
				/>
			</div>

			<div class="col-md-6">
				<label class="form-label" for="confirmPassword">Confirm password</label>
				<input
					class="form-control" 
					id="confirmPassword" 
					placeholder="********" 
					type="password"
					name="confirmPassword"
				/>
			</div>

			<div class="col-12">
				<label class="form-label" for="username">Organization</label>
				<input 
					class="form-control"
					id="username" 
					placeholder="Company Ltd." 
					type="text"
					required="required"
					name="org"
				/>
			</div>

			<div>
				<button class="pet-form-button" type="submit">Create Account</button>
			</div>
		</form>
	</section>
</div>